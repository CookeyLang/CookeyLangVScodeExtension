{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "cookeyLang",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.cookey",
                    "match": "\\b(if|el|while|forrep|for|ret|function|or|and)\\b"
                },
                {
                    "name": "comment",
                    "match": "%%.*"
                },
                {
                    "name": "comment.block",
                    "begin": "%\\*",
                    "end": "\\*%"
                },
                {
                    "name": "constant.numeric",
                    "match": "\\d"
                },
                {
                    "name": "keyword.operator",
                    "match": "[+*\\/=\\-<>^;\\.{}()]"
                },
                {
                    "name": "keyword.other",
                    "match": "true|false|NaV"
                },
                {
                    "name": "storage.modifier",
                    "match": "var|final"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.cookey",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.cookey",
                    "match": "\\\\(?:m\\d+|u{.+}|.)"
                }
            ]
        }
    },
    "scopeName": "source.clf"
}